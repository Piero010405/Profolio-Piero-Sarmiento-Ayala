---
import {
  IconBrandGithubFilled,
  IconBrandX,
  IconCircleArrowLeftFilled,
  IconExternalLink,
} from '@tabler/icons-react'
---

<section
  class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 auto-rows-auto gap-5 m-5 xl:m-2 h-fit text-white'
>
  <div
    class='rounded-lg sm:col-span-2 md:col-span-3 flex flex-col gap-y-4 justify-center'
  >
    <img
      class='w-full max-h-[150px] object-cover rounded-lg'
      src='/img/projectsGif.gif'
      alt='Projects gif'
    />
    <div class='absolute p-4'>
      <h1 class='text-left font-bold text-lg sm:text-2xl tracking-tight'>
        Projects
      </h1>
    </div>
  </div>

  <div class='flex justify-center items-center cursor-pointer w-full h-auto'>
    <a
      href='https://twitter-clone-six-orpin.vercel.app/'
      target='_blank'
      rel='noopener'
      class='w-full h-full p-4 rounded-lg bg-gradient-to-r from-gray-700 via-gray-900 to-black flex hover:scale-[103%] transition duration-300 ease-in-out justify-center items-center'
    >
      <IconBrandX className='size-32' />
    </a>
  </div>

  <div class='rounded-lg md:row-span-1'>
    <img
      class='w-full h-full object-cover rounded-lg'
      src='/img/projectX2.webp'
      alt='Image of my twiter clone'
    />
  </div>

  <div class='rounded-lg md:col-span-2'>
    <img
      class='w-full h-full object-cover rounded-lg'
      src='/img/projectX.webp'
      alt='Image of my twiter clone'
    />
  </div>

  <div
    class='rounded-lg md:row-span-1 bg-gradient-to-tl from-red-600 via-violet-800 to-purple-600 flex flex-col justify-center items-center gap-y-5'
  >
    <span
      class='bg-white/20 backdrop:blur-sm p-1 rounded-lg border border-white/20 font-bold tracking-tight'
    >
      Clon de Twitter
    </span>
    <a
      href='https://github.com/Piero010405/Twitter-Clone'
      target='_blank'
      rel='noopener'
      class='cursor-pointer size-fit bg-white rounded-full hover:bg-transparent transition-all duration-300 ease-linear p-2'
    >
      <IconBrandGithubFilled
        className='size-12 text-black hover:text-white transition-all duration-300 ease-linear'
      />
    </a>

    <a
      href='https://twitter-clone-six-orpin.vercel.app/'
      target='_blank'
      rel='noopener'
      class='cursor-pointer size-fit bg-white rounded-full hover:bg-transparent transition-all duration-300 ease-linear p-2'
    >
      <IconExternalLink
        className='size-12 text-black hover:text-white transition-all duration-300 ease-linear'
      />
    </a>
  </div>

  <div class='rounded-lg md:col-span-2'>
    <img
      class='w-fit h-fit object-cover rounded-lg'
      src='/img/projectTRK.webp'
      alt='Image of the landign page of TRK Publicidad'
    />
  </div>

  <div
    class='rounded-lg md:row-span-1 bg-gradient-to-bl from-teal-400 to-yellow-200 flex flex-col justify-center items-center gap-y-5'
  >
    <span
      class='bg-white/20 backdrop:blur-sm p-1 rounded-lg border border-white/20 font-bold tracking-tight'
    >
      Landing Page
    </span>
    <a
      href='https://github.com/Piero010405/TRK-PUBLICIDAD-2024'
      target='_blank'
      rel='noopener'
      class='cursor-pointer size-fit bg-white rounded-full hover:bg-transparent transition-all duration-300 ease-linear p-2'
    >
      <IconBrandGithubFilled
        className='size-12 text-black hover:text-white transition-all duration-300 ease-linear'
      />
    </a>

    <a
      href='https://trk-publicidad-2024.vercel.app/'
      target='_blank'
      rel='noopener'
      class='cursor-pointer size-fit bg-white rounded-full hover:bg-transparent transition-all duration-300 ease-linear p-2'
    >
      <IconExternalLink
        className='size-12 text-black hover:text-white transition-all duration-300 ease-linear'
      />
    </a>
  </div>

  <div class='rounded-lg md:row-span-1'>
    <img
      class='w-full h-full object-cover rounded-lg'
      src='/img/projectTRK2.webp'
      alt='Image of the landign page of TRK Publicidad'
    />
  </div>

  <div class='flex justify-center items-center cursor-pointer w-full h-auto'>
    <a
      href='https://trk-publicidad-2024.vercel.app/'
      target='_blank'
      rel='noopener'
      class='w-full h-full p-4 rounded-lg bg-gradient-to-r from-gray-400 via-gray-300 to-white flex hover:scale-[103%] transition duration-300 ease-in-out justify-center items-center'
    >
      <img
        class='w-full h-full object-cover rounded-lg'
        src='/img/trkBrand.webp'
        alt='TRK brand logo'
      />
    </a>
  </div>

  <div
    class='p-4 rounded-lg bg-gradient-to-l from-sky-600 to-emerald-400 flex flex-col gap-y-4 justify-center md:col-span-3'
  >
    <h1 class='text-left font-bold text-lg sm:text-2xl tracking-tight'>
      Go Back Home
    </h1>
    <a
      href='/'
      class='cursor-pointer hover:scale-[103%] transition-all duration-300 ease-in-out'
    >
      <IconCircleArrowLeftFilled className='size-12' />
    </a>
  </div>
</section>
