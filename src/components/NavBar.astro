---
import {
  IconBrandDiscordFilled,
  IconCode,
  IconHome,
  IconHomeFilled,
  IconNotebook,
  IconUserFilled,
} from '@tabler/icons-react'

import { discordId } from '../consts/consts.ts'
---

<section>
  <nav
    class='border-r border-white/20 bg-black/30 backdrop-filter backdrop-blur-lg p-3 rounded-l-3xl h-full'
  >
    <ul class='flex flex-col gap-y-5 items-center text-black h-full'>
      <li>
        <a
          class='shadow-lg cursor-pointer bg-white rounded-3xl hover:rounded-2xl transition-all duration-300 ease-linear p-2 hover:text-white hover:bg-black group flex justify-center items-center flex-row'
          href='/'
        >
          <IconHomeFilled className='size-7' />
          <span
            class='absolute w-auto p-2 m-2 min-w-max left-14 rounded-md shadow-md text-white bg-zinc-800 text-xs font-bold transition-all duration-0 scale-0 origin-left group-hover:scale-100 z-50'
          >
            Home
          </span>
        </a>
      </li>

      <li>
        <a
          class='shadow-lg cursor-pointer bg-white rounded-3xl hover:rounded-2xl transition-all duration-300 ease-linear p-2 hover:text-white hover:bg-black group flex justify-center items-center flex-row'
          href={`https://discordapp.com/users/${discordId}`}
          target='_blank'
          rel='noopener'
        >
          <IconBrandDiscordFilled className='size-7' />
          <span
            class='absolute w-auto p-2 m-2 min-w-max left-14 rounded-md shadow-md text-white bg-zinc-800 text-xs font-bold transition-all duration-0 scale-0 origin-left group-hover:scale-100 z-50'
          >
            Discord
          </span>
        </a>
      </li>

      <li>
        <a
          class='shadow-lg cursor-pointer bg-white rounded-3xl hover:rounded-2xl transition-all duration-300 ease-linear p-2 hover:text-white hover:bg-black group flex justify-center items-center flex-row'
          href='/projects'
        >
          <IconCode className='size-7' />
          <span
            class='absolute w-auto p-2 m-2 min-w-max left-14 rounded-md shadow-md text-white bg-zinc-800 text-xs font-bold transition-all duration-0 scale-0 origin-left group-hover:scale-100 z-50'
          >
            Projects
          </span>
        </a>
      </li>

      <!-- <li>
        <a
          class='shadow-lg cursor-pointer bg-white rounded-3xl hover:rounded-2xl transition-all duration-300 ease-linear p-2 hover:text-white hover:bg-black group flex justify-center items-center flex-row'
        >
          <IconNotebook className='size-7' />
          <span
            class='absolute w-auto p-2 m-2 min-w-max left-14 rounded-md shadow-md text-white bg-zinc-800 text-xs font-bold transition-all duration-0 scale-0 origin-left group-hover:scale-100 z-50'
          >
            Experience
          </span>
        </a>
      </li> -->

      <li>
        <a
          class='shadow-lg cursor-pointer bg-white rounded-3xl hover:rounded-2xl transition-all duration-300 ease-linear p-2 hover:text-white hover:bg-black group flex justify-center items-center flex-row'
        >
          <IconUserFilled className='size-7' />
          <span
            class='absolute w-auto p-2 m-2 min-w-max left-14 rounded-md shadow-md text-white bg-zinc-800 text-xs font-bold transition-all duration-0 scale-0 origin-left group-hover:scale-100 z-50'
          >
            About me
          </span>
        </a>
      </li>
    </ul>
  </nav>
</section>
